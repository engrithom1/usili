<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">Dashbord</h3>
                </div>
                <div class="col-12 col-xl-4">
                    <h4 class="text-danger">{{message}}</h4>
                </div>
            </div>
        </div>
    </div>
     {{#if (if_greater userInfo.user.role 1)}}
    <div class="mt-3"></div>
    <h5>Revenue Summary</h5>
    <div class="row">
        <div class="col-sm-6 col-md-3 mb-4 stretch-card transparent">
            <div class="card card-tale">
                <div class="card-body">
                    
                    <p class="fs-25 mt-3">{{transit}}</p>
                   <p>On Transit Packages</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 mb-4 stretch-card transparent">
            <div class="card card-tale">
                <div class="card-body">
                   
                    <p class="fs-25 mt-3">{{price revDay}}/=</p>
                   <p>To Day's Revenue</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 mb-4 stretch-card transparent">
            <div class="card card-dark-blue">
                <div class="card-body">
                   
                   <p class="fs-25 mt-3">{{price rev7}}/=</p>
                   <p>Last 7 Day's Revenue</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 mb-4 stretch-card transparent">
            <div class="card card-dark-blue">
                <div class="card-body">
                    
                    <p class="fs-25 mt-3">{{price rev30}}/=</p>
                    <p>Last 30 Day's Revenue</p>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    <h5>Branch Based Information</h5>
    <div class="row mt-3">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card tale-bg">
                <div class="card-people mt-auto">
                    <img src="/images/{{userInfo.user.bthumbnail}}" alt="people">
                    <div class="weather-info">
                        <div class="d-flex">
                            <div class="ms-2">
                                <h3 class="location font-weight-normal">{{userInfo.user.bname}}</h3>
                                <h4 class="font-weight-normal">{{userInfo.user.bregion}}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin transparent">
            <div class="row">
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-tale">
                        <div class="card-body">
                            <p class="mb-4">Incoming Packages</p>
                            <p class="fs-30 mb-2">{{incoming}}</p>
                            <p></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 stretch-card transparent">
                    <div class="card card-dark-blue">
                        <div class="card-body">
                            <p class="mb-4">Outgoing Packages</p>
                            <p class="fs-30 mb-2">{{outgoing}}</p>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                    <div class="card card-light-blue">
                        <div class="card-body">
                            <p class="mb-4">Received Packages</p>
                            <p class="fs-30 mb-2">{{received}}</p>
                            <p>Last 30 days</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 stretch-card transparent">
                    <div class="card card-light-danger">
                        <div class="card-body">
                            <p class="mb-4">Sent Packages</p>
                            <p class="fs-30 mb-2">{{sent}}</p>
                            <p>Last 30 days</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    $('#dashbord').attr('class', 'nav-item active');
</script>