<style>
   .divider {
      background-color: #42b983
   }
   
</style>
<div class="container main-page">
   {{>dashbord_menu }}

    <div class="card mt-3">
        <div class="card-header">
           <div class="d-flex justify-content-between">
               <h5>Information</h5>
           </div>
        </div>
        <div class="card-body">
           <div class="row">
               <div class="col-md-2 col-12">
                  <img src="/images/{{p_info.avator}}" alt="">
               </div>
               <div class="col-md-10 col-12">
                   <h6>Personal Info</h6>
                    <div class="row">
                        
                        <div class="col-md-3 col-6">
                            <p>UserId : {{ p_info.user_id }}</p>
                        </div>
                        <div class="col-md-3 col-6">
                            <p>Name : {{ p_info.username }}</p>
                        </div>
                        <div class="col-md-3 col-6">
                            <p>Phone : {{ p_info.phone_number }}</p>
                        </div>
                        <div class="col-md-3 col-6">
                            <p>Acc : {{ p_info.number }}</p>
                        </div>
                        <div class="col-md-3 col-6">
                            <p>Methode: {{ p_info.methode_name }}</p>
                        </div>
                        <div class="col-md-3 col-6">
                            <p>Joined: {{ subdate p_info.join_at }}</p>
                        </div>
                    </div>
                    <h6 class="mt-3">Financial Info</h6>
                    <div class="row mt-2">
                        <div class="col-md-4 col-sm-6">
                           <div class="card text-center p-2">
                              <p>Total Earnings</p>
                               <h5 class="text-info">TZS {{price t_earn}}/=</h5>
                           </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                           <div class="card text-center p-2">
                              <p>Total Paid</p>
                               <h5 class="text-warning">TZS {{ price t_paid }}/=</h5>
                           </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                           <div class="card text-center p-2">
                              <p>Now Balance</p>
                               <h5 class="text-success">TZS {{ price t_balance }}/=</h5>
                           </div>
                        </div>
                    </div>
               </div>
           </div>
        </div>
    </div>

   <div class="card mt-3">
      <div class="card-header">
         <div class="d-flex justify-content-between">
            <h5>Courses</h5>
         </div>
      </div>
      {{#if audios }}
      
      <div class="card-body">
        <h6>Audios courses</h6>
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Created at</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Created at</th>
                        <th>Action</th> 
                    </tr>
                </tfoot>
                <tbody>
                   {{#each audios }}
                    
                    <tr>
                        <td>{{ this.id }}</td>
                        <td>{{ this.title }}</td>
                        <td>{{ this.views }}</td>
                        <td>{{subdate this.created_at}}</td>
                        <td>
                            <a class="btn btn-success" href="/audio/{{ this.slug }}"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                   {{/each }}

                </tbody>
            </table>

        </div>
      </div>
      {{/if  }}

      {{#if videos }}
      
      <div class="card-body">
        <h6>Videos courses</h6>
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Created at</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Created at</th>
                        <th>Action</th> 
                    </tr>
                </tfoot>
                <tbody>
                   {{#each videos }}
                    
                    <tr>
                        <td>{{ this.id }}</td>
                        <td>{{ this.title }}</td>
                        <td>{{ this.views }}</td>
                        <td>{{subdate this.created_at}}</td>
                        <td>
                            <a class="btn btn-success" href="/video/{{ this.slug }}"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                   {{/each }}

                </tbody>
            </table>

        </div>
      </div>
      {{/if  }}

      {{#if books }}
      
      <div class="card-body">
        <h6>books courses</h6>
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Created at</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Views</th>
                        <th>Created at</th>
                        <th>Action</th> 
                    </tr>
                </tfoot>
                <tbody>
                   {{#each books }}
                    
                    <tr>
                        <td>{{ this.id }}</td>
                        <td>{{ this.title }}</td>
                        <td>{{ this.views }}</td>
                        <td>{{subdate this.created_at}}</td>
                        <td>
                            <a class="btn btn-success" href="/book/{{ this.slug }}"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                   {{/each }}

                </tbody>
            </table>

        </div>
      </div>
      {{/if  }}
   </div>

    <div class="card mt-3">
        <div class="card-header">
           <div class="d-flex justify-content-between">
              <h5>Payments</h5>
           </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Method</th>
                        <th>Amount</th>
                        <th>Issue Date</th>
                       

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Method</th>
                        <th>Amount</th>                        
                        <th>Issue Date</th>
                        

                    </tr>
                </tfoot>
                <tbody>
                   {{#each payments }}
                    
                    <tr>
                       
                        <td>{{ this.method }}</td>
                        <td>{{ price this.payed_amount }}</td>
                        <td>{{ subdate this.created_at }}</td>
                    </tr>
                   {{/each }}

                </tbody>
            </table>

        </div>
      </div>
    </div>   
</div>   

<script>
$(document).on('click', '.user-info', function() { 

    var username = $(this).attr('username');
    var avator = $(this).attr('avator');
    var phone_number = $(this).attr('phone_number');
    var role = $(this).attr('role');
    var role_id = $(this).attr('role_id');
    var status = $(this).attr('status');

    if(role_id == 1){
        alert('To change Admin, Contact to Adminstrator')
    }else{
        $('#user-profile').attr('src','/images/'+avator)
        $('#username').text(username)
        $('#phone_number').text(phone_number)
        $('#role').text(role)
        $('#status').text(status)
        $('#username_u').val(username)

        $('#userModal').modal('show')
    }
})    
</script>